<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.mapper.PermissionMapper">
         <select id="listPermissionById" parameterType="int" resultType="Permission">
              select p.id, p.name from employee e
                     left join employee_role er
                          on e.id = er.eid
                     left jion role r
                          on r.id = er.rid
                     left join role_permission rp
                          on r.id = rp.rid
                     left join permission p
                          on p.id = rp.pid
               where e.id = #{0}
         </select>
    </mapper>